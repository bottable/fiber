{
  "name": "fiber",
  "version": "1.0.0",
  "description": "A React UI Component library",
  "author": "bottable",
  "license": "MIT",
  "repository": "bottable/fiber",
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "src/index.tsx",
  "private": true,
  "engines": {
    "node": ">=10"
  },
  "workspaces": [
    "packages/*",
    "website"
  ],
  "scripts": {
    "start": "concurrently 'yarn:watch' 'yarn:web:start'",
    "test": "cross-env NODE_ENV=test yarn jest",
    "test:refresh": "jest --updateSnapshot --env=jsdom",
    "type-check": "tsc --build tsconfig.build.json",
    "watch": "yarn type-check --watch",
    "web:start": "yarn workspace fiber-ui-website start",
    "lint:scss": "stylelint 'src/**/*.scss' --syntax scss",
    "lint:scss:fix": "stylelint 'src/**/*.scss' --syntax scss --fix",
    "lint:js": "eslint . --ext .js,.jsx",
    "lint:js:fix": "yarn run lint:js -- --fix"
  },
  "lint-staged": {
    "packages/fiber-ui/src/**/*.{js,jsx,ts,tsx}": [
      "eslint . --fix",
      "stylelint --config=.stylelintrc --fix",
      "pretty-quick --staged"
    ],
    "website/**/*.{js,jsx,ts,tsx}": [
      "eslint . --fix",
      "stylelint --config=.stylelintrc --fix",
      "pretty-quick --staged"
    ],
    "packages/fiber-ui/src/**/*.scss": [
      "stylelint --config=.stylelintrc --syntax scss --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "peerDependencies": {
    "react": "^16.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/plugin-transform-modules-commonjs": "^7.10.4",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^25.2.3",
    "@types/react": "^16.9.27",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^26.3.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "babel-preset-react-app": "^9.1.2",
    "concurrently": "^5.2.0",
    "cross-env": "^7.0.2",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.0.2",
    "eslint-plugin-standard": "^4.0.1",
    "gh-pages": "^2.2.0",
    "husky": "^4.2.5",
    "hygen": "^5.0.3",
    "jest": "^26.4.2",
    "jest-environment-jsdom-fourteen": "^1.0.1",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.4",
    "microbundle-crl": "^0.13.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.4",
    "pretty-quick": "^2.0.1",
    "react": "^16.13.1",
    "react-app-polyfill": "^1.0.6",
    "react-dom": "^16.13.1",
    "react-scripts": "^3.4.1",
    "react-test-renderer": "^16.13.1",
    "stylelint": "^13.5.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-config-yoctol": "^4.0.1",
    "ts-jest": "^26.1.0",
    "typescript": "^4.0.3"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@material-ui/core": "^4.10.2",
    "@material-ui/icons": "^4.9.1",
    "@types/enzyme": "^3.10.5",
    "@types/react-helmet": "^6.0.0",
    "@types/react-helmet-async": "^1.0.3",
    "@types/react-test-renderer": "^16.9.2",
    "@types/styled-components": "^5.1.0",
    "@types/styled-system": "^5.1.9",
    "docz": "^2.3.1",
    "eslint-import-resolver-alias": "^1.1.2",
    "gatsby": "2.22.15",
    "polished": "^3.6.4",
    "rc-util": "^5.0.6",
    "react-helmet": "^6.0.0",
    "react-helmet-async": "^1.0.6",
    "styled-components": "^5.1.0",
    "styled-normalize": "^8.0.7",
    "styled-system": "^5.1.5"
  },
  "resolutions": {
    "**/@typescript-eslint/eslint-plugin": "^4.1.1",
    "**/@typescript-eslint/parser": "^4.1.1"
  }
}
